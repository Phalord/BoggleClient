<UserControl x:Class="BoogleClient.Views.Components.LobbyPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoogleClient.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500">
    <Grid Background="{StaticResource BlackBrush}">
        <StackPanel Orientation="Horizontal">
            <Label
                Style="{StaticResource BodyText}"
                Foreground="{StaticResource WhiteBrush}"
                VerticalAlignment="Center"
                Margin="13,0"
                Content="5/8"
                Width="60"/>
            <Label
                Style="{StaticResource BodyText}"
                Foreground="{StaticResource WhiteBrush}"
                VerticalAlignment="Center"
                Margin="0,0"
                Content="Lobby - GameMode"
                Width="300"/>
            <Button
                Style="{StaticResource ContainedButton}"
                Content="Join"
                FontSize="25"
                Width="100"
                Height="40"/>
        </StackPanel>
    </Grid>
</UserControl>
