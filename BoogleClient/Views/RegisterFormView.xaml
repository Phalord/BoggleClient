<UserControl x:Class="BoogleClient.Views.RegisterFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoogleClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="585" d:DesignWidth="300">
    <Grid>
        <StackPanel Grid.Column="0" Background="{StaticResource WhiteBrush}">
            <Label 
                Content="Create account"
                Margin="0,50,0,30"
                HorizontalAlignment="Center"
                FontSize="30"
                FontWeight="Bold"/>
            <StackPanel>
                <Label
                    Content="Email" 
                    FontSize="13"
                    FontWeight="DemiBold"
                    HorizontalAlignment="Left"
                    Margin="50,0,0,0"/>
                <TextBox
                    Style="{StaticResource UnderlinedTextBox}"
                    Width="200"
                    HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel>
                <Label
                    Content="Username" 
                    FontSize="13"
                    FontWeight="DemiBold"
                    HorizontalAlignment="Left"
                    Margin="50,0,0,0"/>
                <TextBox
                    Style="{StaticResource UnderlinedTextBox}"
                    Width="200"
                    HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Margin="0,10,0,0">
                <Label 
                    Content="Password" 
                    FontSize="13"
                    FontWeight="DemiBold"
                    HorizontalAlignment="Left"
                    Margin="50,0,0,0"/>
                <PasswordBox
                    Style="{StaticResource UnderlinedPasswordBox}"
                    FontSize="15"
                    BorderBrush="{StaticResource PrimaryLightBrush}"
                    Width="200"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Margin="0,10,0,40">
                <Label 
                    Content="Comfirm Password" 
                    FontSize="13"
                    FontWeight="DemiBold"
                    HorizontalAlignment="Left"
                    Margin="50,0,0,0"/>
                <PasswordBox
                    Style="{StaticResource UnderlinedPasswordBox}"
                    FontSize="15"
                    BorderBrush="{StaticResource PrimaryLightBrush}"
                    Width="200"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Center"/>
            </StackPanel>
            <Button 
                Content="Create Account"
                Style="{StaticResource ContainedButton}"
                Width="200"
                Height="30"
                HorizontalAlignment="Center"/>
            <Button
                Content="Log In"
                Style="{StaticResource OutlinedButton}"
                Width="200"
                Height="30"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
